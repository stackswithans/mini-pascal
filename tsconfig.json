{
    "compilerOptions": {
        "target":"ES6", 
        "module": "CommonJS",
        "strict":true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "allowUnreachableCode": false, 
        "noImplicitReturns": true,
        "sourceMap": true, 
        "outDir":"./dist/" 
    },
    "include": ["./src/**/*","./test.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
